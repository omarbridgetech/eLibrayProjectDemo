@model BookDto
@{
}
<div class="col-md-8 mx-auto rounded border p-3">
    <h2 class="text-center mb-5">Apply Discount</h2>

    <form method="post">
        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">ID</label>
            <div class="col-sm-8">
                <input class="form-control-plaintext" readonly value="@ViewData["EbookId"]" />
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">Current Price</label>
            <div class="col-sm-8">
                <input class="form-control-plaintext" readonly value="@ViewData["CurrentPrice"] $" />
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-4 col-form-label">New Price</label>
            <div class="col-sm-8">
                <input type="number" class="form-control" asp-for="PriceBuy" min="0" step="0.01" />
                <span asp-validation-for="PriceBuy" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="offset-sm-4 col-sm-4 d-grid">
                <button type="submit" class="btn btn-primary">Apply Discount</button>
            </div>
            <div class="col-sm-4 d-grid">
                <a href="@Url.Action("Index", "Book")" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>
